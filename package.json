{
  "name": "trading-app",
  "version": "1.0.0",
  "description": "A trading application that integrates APIs, webhooks, and multiple security modules for financial transactions.",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",            // لتشغيل التطبيق في وضع التطوير مع المراقبة التلقائية
    "build": "echo 'Building project...'", // سكربت افتراضي للبناء (يمكن تخصيصه لاحقًا)
    "test": "jest",                      // تشغيل الاختبارات باستخدام Jest
    "lint": "eslint .",                  // تشغيل eslint للتحقق من جودة الكود
    "format": "prettier --write ."       // تنسيق الكود باستخدام Prettier
  },
  "dependencies": {
    "express": "^4.18.2",                // لإدارة الخادم و API
    "dotenv": "^10.0.0",                 // لإدارة المتغيرات البيئية
    "nodemailer": "^6.7.2",              // لإرسال البريد الإلكتروني للإشعارات
    "mongoose": "^6.0.14",               // لإدارة قواعد البيانات MongoDB
    "jsonwebtoken": "^8.5.1",            // لإدارة التوثيق باستخدام JSON Web Tokens
    "cors": "^2.8.5"                     // لدعم Cross-Origin Resource Sharing
  },
  "devDependencies": {
    "nodemon": "^2.0.12",                // لإعادة تشغيل الخادم تلقائيًا أثناء التطوير
    "jest": "^27.4.3",                   // مكتبة للاختبار
    "eslint": "^7.32.0",                 // للتحقق من جودة الكود
    "prettier": "^2.4.1",                // لتنسيق الكود
    "eslint-config-prettier": "^8.3.0",  // لتجنب تعارضات بين ESLint و Prettier
    "eslint-plugin-prettier": "^4.0.0"   // لدمج Prettier مع ESLint
  },
  "engines": {
    "node": ">=14.0.0",                  // تحديد الحد الأدنى لإصدار Node.js
    "npm": ">=6.0.0"                     // تحديد الحد الأدنى لإصدار npm
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/osmanjamal/project.git"
  },
  "keywords": [
    "trading",
    "API",
    "webhooks",
    "security",
    "financial",
    "nodejs"
  ],
  "author": "Osman Jamal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/osmanjamal/project/issues"
  },
  "homepage": "https://github.com/osmanjamal/project#readme"
}
